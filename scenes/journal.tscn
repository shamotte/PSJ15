script/source = "extends Panel

@onready var tabbuttons := [
	$\"../VBoxContainer/Button\",
	$\"../VBoxContainer/Button3\",
	$\"../VBoxContainer/Button2\"
]
@onready var tabs := [
	$Control,
	$Control2,
	$Control3
]

func set_tab(i = 0):
	print(i)
	for tab in tabs:
		tab.visible = false
	tabs[i].visible = true

func _ready():

	var i := 0
	for button in tabbuttons:
		var x := set_tab.bind(i)
		button.connect(\"pressed\", x)
		i += 1


"

